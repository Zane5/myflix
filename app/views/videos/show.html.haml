%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img{src: @video.large_cover}
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Average Rating: 
          = @video.rating
        %p= @video.description
        = link_to "Watch Now", @video.video_url, class: "btn btn-default"
        = link_to "+ My Queue", queue_items_path(video_id: @video.id), method: :post, class: 'btn btn-default' unless current_user.queued_video?(@video)

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for [@video, Review.new] do |f|
        %fieldset
          .form-group
            %label Rate this video
            = f.select :rating, options_for_video_reviews
          .form-group
            %label Write Review
            = f.text_area :content, row: 6, class: "col-sm-offset1"
        %fieldset.form-group.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          = link_to "Cancel", @video
          %a(href="") Cancel
 
      %header
        %h3 User Reviews (#{@reviews.count})
        %ul
          - @reviews.each do |review|
            %article.review
              %li.row
                .col-sm-2
                  %span Rating: #{review.rating} / 5
                  %p
                    by
                    = link_to review.user.full_name, review.user
                .col-sm-8
                  %p= review.content 
